<h1>Articles listing page</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

    <% @articles.each do |article| %>
      <tbody>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.description%></td>
          <td><%= link_to 'Show', article_path(article) %></td>
          <td><%= link_to 'Update', '#' %></td>
          <td><%= button_to 'Delete', article_path(article),  data: { turbo_method: :delete } %></td>
        </tr>
      </tbody>
    <% end %>
</table>
<a href="/articles/new">New Article</a>
